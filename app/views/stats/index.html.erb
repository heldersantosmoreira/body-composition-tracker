<section class="section">
  <div class="container">
    <div class="title is-1">
      <p>Stats</p>
    </div>

    <div class="level">
      <div class="level-left">
        <div class="level-item">
          <nav class="breadcrumb" aria-label="breadcrumbs">
            <ul>
              <li><%= link_to 'Home', root_path %></li>
              <li class="is-active"><a href="#" aria-current="page">Stats</a></li>
            </ul>
          </nav>
        </div>
      </div>
      <div class="level-right">
        <div class="level-item">
          <div class="buttons">
            <%= link_to 'Weekly averages', weekly_stats_path, class: 'button is-large is-link' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="hero is-light is-bold">
  <div class="hero-body">
    <div class="container">
      <p>
        <h1 class="title">
          Starting weight
        </h1>
        <h2 class="subtitle">
          <% if @starting.present? %>
            <%= "#{@starting.weight} (#{@starting.when.strftime("%d/%m/%Y")})" %>
          <% else %>
            -
          <% end %>
        </h2>
      </p>
    <p>
      <h1 class="title">
        Lowest weight
      </h1>
      <h2 class="subtitle">
        <% if @lowest.present? %>
          <%= "#{@lowest.weight} (#{@lowest.when.strftime("%d/%m/%Y")})" %>
        <% else %>
          -
        <% end %>
      </h2>
    </p>
    <p>
      <h1 class="title">
        Latest weight
      </h1>
      <h2 class="subtitle">
        <% if @latest.present? %>
          <%= "#{@latest.weight} (#{@latest.when.strftime("%d/%m/%Y")})" %>
        <% else %>
          -
        <% end %>
      </h2>
    </p>
  </div>
</section>
