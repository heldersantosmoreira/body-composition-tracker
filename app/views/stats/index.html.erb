<section class="section">
  <div class="container">
    <nav class="breadcrumb" aria-label="breadcrumbs">
      <ul>
        <li><%= link_to 'Home', root_path %></li>
        <li class="is-active"><a href="#" aria-current="page">Stats</a></li>
      </ul>
    </nav>

    <div class="title is-1">
      <p>Stats</p>
    </div>

    <div class="buttons">
      <%= link_to 'Weekly averages', weekly_averages_stats_path, class: 'button is-medium is-link' %>
      <%= link_to 'Predictions', predictions_stats_path, class: 'button is-medium is-link' %>
    </div>

  </div>
</section>

<section class="section">
  <div class="container">
    <div class="title is-3">
      <p>Weight</p>
    </div>
    <% if @starting.present? %>
      <table class="table is-striped is-hoverable is-fullwidth">
        <tbody>
          <tr>
            <td>Exponential moving average (last 15 results)</td>
            <td><%= @ema_weight.round(2) %></td>
          </tr>
          <tr>
            <td>Starting</td>
            <td><%= "#{@starting.weight} (#{@starting.when.strftime("%d/%m/%Y")})" %></td>
          </tr>
          <tr>
            <td>Lowest</td>
            <td><%= "#{@lowest_weight.weight} (#{@lowest_weight.when.strftime("%d/%m/%Y")})" %></td>
          </tr>
          <tr>
            <td>Latest</td>
            <td><%= "#{@latest.weight} (#{@latest.when.strftime("%d/%m/%Y")})" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="title is-3">
      <p>Body fat</p>
    </div>
    <% if @starting.present? %>
      <table class="table is-striped is-hoverable is-fullwidth">
        <tbody>
          <tr>
            <td>Exponential moving average (last 15 results)</td>
            <td><%= @ema_fat.round(2) %></td>
          </tr>
          <tr>
            <td>Starting</td>
            <td><%= "#{@starting.fat} (#{@starting.when.strftime("%d/%m/%Y")})" %></td>
          </tr>
          <tr>
            <td>Lowest</td>
            <td><%= "#{@lowest_fat.fat} (#{@lowest_fat.when.strftime("%d/%m/%Y")})" %></td>
          </tr>
          <tr>
            <td>Latest</td>
            <td><%= "#{@latest.fat} (#{@latest.when.strftime("%d/%m/%Y")})" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</section>
